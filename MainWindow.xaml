<Window x:Class="LogParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="CadetBlue" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="655*"/>
        </Grid.ColumnDefinitions>      
        <TextBox 
            x:Name="LogText"
            TextWrapping="Wrap"
            Margin="0,50,15,30"
            Background="LightGray" 
            Grid.Column="2"/>
        <StackPanel VerticalAlignment="Top" Grid.Column="1"
            Margin="5,47,5,30">
            <DockPanel>
                <Label
                    Name="Ports"
                    Content="Ports"
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontWeight="Bold"/>
                <ComboBox 
                    x:Name="COM_Port_list"
                    DataContext="Ports"
                    DockPanel.Dock="Right"
                    Margin="3"/>
            </DockPanel>
            <DockPanel>
                <Label 
                    Name="Baud"
                    Content="Baud"
                    HorizontalAlignment="Left"                    
                    DockPanel.Dock="Left"
                    FontWeight="Bold"/>
                <ComboBox 
                    x:Name="BaudRateBox"
                    DockPanel.Dock="Right"
                    Margin="3"/>
            </DockPanel>
            <Button 
                    Content="Connect" 
                    x:Name="Connect_btn" 
                    Click="Connect_Click"   
                    DockPanel.Dock="Right"
                    Margin="1"
                    FontWeight="Bold"/>
            <Button 
                    Content="Clear"
                    x:Name="btnClear"
                    Click="btnClear_Click"
                    DockPanel.Dock="Left"
                    Margin="1"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
